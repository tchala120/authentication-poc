{
  "name": "authentication-poc",
  "description": "The authentication poc for hooray site",
  "version": "0.2.1",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@graphql-codegen/cli": "^2.6.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "antd": "^4.19.3",
    "date-fns": "^2.28.0",
    "graphql": "^16.3.0",
    "graphql.macro": "^1.4.2",
    "jwt-decode": "^3.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6",
    "react-scripts": "5.0.0",
    "react-use": "^17.3.2",
    "store": "^2.0.12",
    "styled-components": "^5.3.3",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "format:project": "prettier --write src/**/*",
    "format:operations": "prettier --write src/graphQL/generated/operations.ts",
    "codegen:schema": "DOTENV_CONFIG_PATH=./.env.local graphql-codegen -r dotenv/config --config codegen.json",
    "codegen:operations": "graphql-codegen --config codegen.yml && yarn format:operations",
    "codegen:all": "yarn codegen:schema && yarn codegen:operations"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "@types/store": "^2.0.2",
    "@types/styled-components": "^5.1.24",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,gql,graphql,css,yml,yaml}": "yarn format:project"
  }
}
